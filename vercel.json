{
  "version": 2,
  "buildCommand": "cd backend && npm run vercel-build && cd ../frontend && npm run build",
  "installCommand": "npm install && cd backend && npm install && cd ../frontend && npm install",
  "builds": [
    {
      "src": "backend/dist/vercel.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/dist/**"]
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/dist/vercel.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "backend/dist/vercel.js": {
      "maxDuration": 30
    }
  }
}